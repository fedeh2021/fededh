<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mercado Liebre</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/normalize.css">
    <script src="https://kit.fontawesome.com/e32b1dc814.js" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('./../views/partials/header') %>
        <img src="/img/img-home-banner.jpg" class="banner">

        <% if (typeof errors != 'undefined') { %>
             <p style="color: red">ERROR</p>
               <ul>
                   <% for (let i = 0; i < errors.length; i++ )  { %>
                <li>
                    <%= errors[i].msg %>
                </li>
                   <% } %> 
               </ul>
        <% } %>
        <form action="/" method="POST" class="formulario" enctype="multipart/form-data">
            <h3>¡Registrate!</h3>
            <div class="control-formulario">
                <label>Nombre y Apellido:</label>
                <input type="text" name="nombreApellido" value="<%= locals.old && old.nombreApellido ? old.nombreApellido : '' %>" class="control" placeholder="Nombre y Apellido">
            </div>
            <div class="control-formulario">
                <label>Nombre de usuario:</label>
                <input type="text" name="nombreUsuario" class="control" placeholder="Nombre de Usuario">
            </div>
            <div class="control-formulario">
                <label>Dirección de email:</label>
                <input type="email" name="email" class="control" placeholder="Direccion de email">
            </div>
            <div class="control-formulario">
                <label>Fecha de Nacimiento:</label>
                <input type="date" name="fechaDeNacimiento" class="control">
                    </div>
            <div class="control-formulario">
                <label>Domicilio:</label>
                <input type="text" name="domicilio" class="control" placeholder="Domicilio">
                    </div>
            <div class="control-formulario">
                <label>Perfil de usuario:</label>
                <label>Comprador</label><input type="radio" name="comprar" class="control">
                <label>Vendedor</label><input type="radio" name="vender" class="control">
            </div>
            <div class="control-formulario">
                <select name="categorias" class="control-formulario">
                   <option class="control" value="0">Categorías</option>
                   <option class="control" value="1">Electro</option>
                   <option class="control" value="2">Moda</option>  
                   <option class="control" value="3">Hogar</option> 
                   <option class="control" value="4">Juguetería</option>   
                   <option class="control" value="5">Vida sana</option> 
                </select>
            </div>
            <div class="control-formulario">
                <label>Foto de usuario:</label>
                <input type="file" name="fotoUsuario" class="control" placeholder="Foto de usuario" multiple>
                    </div>
            <div class="control-formulario">
                 <label>Contraseña:</label>
                 <input type="password" name="contraseña" class="control" placeholder="Contraseña">
            </div>
            <div class="control-formulario">
               <label>Confirmar contraseña:</label>
              <input type="password" class="control" placeholder="Confirmar contraseña">
            </div>
        
            <button type="submit" class="boton-formulario">Enviar</button>
            <button type="reset" class="boton-formulario">Borrar</button>
        </form>
        <%- include('./../views/partials/footer') %>
              <div class="sub-footer">
                        <div class="container">
                    <p>Copyright © 1999-2020 MercadoLiebre S.R.L.</p>
                    </div>
                    </div>
    </body>
    </html>