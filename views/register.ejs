<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mercado Liebre</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/normalize.css">
    <script src="https://kit.fontawesome.com/e32b1dc814.js" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('./../views/partials/header') %>
        <img src="/img/img-home-banner.jpg" class="banner">

        <form action="/usuarios/register" method="POST" class="formulario" enctype="multipart/form-data">
            <h3>¡Registrate!</h3>
            <div class="control-formulario">
                <label>Nombre y Apellido:</label>
                <input type="text" name="nombreApellido" value="<%= locals.oldData ? oldData.nombreApellido : null%>" class="control <%=locals.errors && errors.nombreApellido ? 'is-invalid' : null %>" placeholder="Nombre y Apellido">
                <% if (locals.errors && errors.nombreApellido) { %>
                    <div class="text-danger">
                        <%= errors.nombreApellido.msg %> 
                    </div>
                <% } %>
            </div>
            <div class="control-formulario">
                <label>Nombre de usuario:</label>
                <input type="text" name="nombreUsuario" value="<%= locals.oldData ? oldData.nombreUsuario : null%>" class="control <%=locals.errors && errors.nombreUsuario ? 'is-invalid' : null %>" placeholder="Nombre de Usuario">
                <% if (locals.errors && errors.nombreUsuario) { %>
                    <div class="text-danger">
                        <%= errors.nombreUsuario.msg %> 
                    </div>
                <% } %>
            </div>
            <div class="control-formulario">
                <label>Dirección de email:</label>
                <input type="email" name="email" class="control <%= locals.errors && errors.email ? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.email : null%>" placeholder="Direccion de email">
                <% if (locals.errors && errors.email) { %>
                    <div class="text-danger">
                        <%= errors.email.msg %> 
                    </div>
                <% } %>
            </div>
            <div class="control-formulario">
                <label>Fecha de Nacimiento:</label>
                <input type="date" name="birthday" value="<%= locals.oldData ? oldData.birthday : null%>" class="control <%= locals.errors && errors.birthday ? 'is-invalid' : null %>">
                <% if (locals.errors && errors.birthday) { %>
                    <div class="text-danger">
                        <%= errors.birthday.msg %> 
                    </div>
                <% } %>
            </div>
            <div class="control-formulario">
                <label>Foto de usuario:</label>
                <input type="file" name="avatar" class="control <%= locals.errors && errors.avatar ? 'is-invalid' : null %>" placeholder="Foto de usuario" multiple>
                <% if (locals.errors && errors.avatar) { %>
                    <div class="text-danger">
                        <%= errors.avatar.msg %> 
                    </div>
                <% } %>
            </div>
            <div class="control-formulario">
                 <label>Contraseña:</label>
                 <input type="password" name="password" class="control <%= locals.errors && errors.password ? 'is-invalid' : null %>" placeholder="Contraseña">
                 <% if (locals.errors && errors.password) { %>
                    <div class="text-danger">
                        <%= errors.password.msg %> 
                    </div>
                <% } %>
            </div>
        
            <button type="submit" class="boton-formulario">Enviar</button>
            <button type="reset" class="boton-formulario">Borrar</button>
        </form>
<%- include('./../views/partials/footer') %>
<div class="sub-footer">
    <div class="container">
<p>Copyright © 1999-2020 MercadoLiebre S.R.L.</p>
    </div>
</div>
    </body>
    </html>